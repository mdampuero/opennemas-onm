root = true

# Common definitions for all file types
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[*.{js,css,less,html,tpl}]
indent_style = space
indent_size = 2

[{package.json,bower.json,Gruntfile.js,.travis.yml}]
indent_style = space
indent_size = 2
