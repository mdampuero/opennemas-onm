<?xml version="1.0" encoding="UTF-8"?>
<routes>
    
    <production>
        
        <!-- Content routes {{{ -->
        <content-slugit type="Zend_Controller_Router_Route">
            <route>content/slugit/</route>
            <defaults>
                <controller>content</controller>
                <action>slugit</action>
            </defaults>
        </content-slugit>
        <!-- }}} -->
        
        
        <!-- User routes {{{ -->
        <user-login type="Zend_Controller_Router_Route">
            <route>user/login/</route>
            <defaults>
                <controller>user</controller>
                <action>login</action>
            </defaults>
        </user-login>
        
        <user-logout>
            <route>user/logout/</route>
            <defaults>
                <controller>user</controller>
                <action>logout</action>
            </defaults>
        </user-logout>
        <!-- }}} -->
        
        
        <!-- Webdav routes {{{ -->
        <webdav-index type="Zend_Controller_Router_Route">
            <route>webdav/*</route>
            <defaults>
                <controller>webdav</controller>
                <action>index</action>
            </defaults>
        </webdav-index>
        <!-- }}} -->
        
        
        <!-- Panel routes {{{ -->
        <panel-index type="Zend_Controller_Router_Route">
            <route>/</route>
            <defaults>
                <controller>panel</controller>
                <action>index</action>
            </defaults>
        </panel-index>
        
        <panel-rss type="Zend_Controller_Router_Route">
            <route>panel/rss/*</route>
            <defaults>
                <controller>panel</controller>
                <action>rss</action>
            </defaults>
        </panel-rss>
        <!-- }}} -->
        
        
        <!-- Widget routes {{{ -->
        <widget-index type="Zend_Controller_Router_Route">
            <route>widget/index/*</route>
            <defaults>
                <controller>widget</controller>
                <action>index</action>
            </defaults>
        </widget-index>
        
        <widget-create type="Zend_Controller_Router_Route">
            <route>widget/create/</route>
            <defaults>
                <controller>widget</controller>
                <action>create</action>
            </defaults>
        </widget-create>
        
        <widget-read type="Zend_Controller_Router_Route">
            <route>widget/read/:id/</route>
            <defaults>
                <controller>widget</controller>
                <action>read</action>
            </defaults>
        </widget-read>
        
        <widget-update type="Zend_Controller_Router_Route">
            <route>widget/update/*</route>
            <defaults>
                <controller>widget</controller>
                <action>update</action>
            </defaults>
        </widget-update>
        
        <widget-delete type="Zend_Controller_Router_Route">
            <route>widget/delete/:id/</route>
            <defaults>
                <controller>widget</controller>
                <action>delete</action>
            </defaults>
        </widget-delete>
        
        <widget-changestatus type="Zend_Controller_Router_Route">
            <route>widget/changestatus/:id/:status/</route>
            <defaults>
                <controller>widget</controller>
                <action>changestatus</action>
            </defaults>
        </widget-changestatus>
        <!-- }}} -->
        
        
        <!-- Pages routes {{{ -->
        <page-index type="Zend_Controller_Router_Route">
            <route>page/index/*</route>
            <defaults>
                <controller>page</controller>
                <action>index</action>
            </defaults>
        </page-index>
        
        <page-slugit type="Zend_Controller_Router_Route">
            <route>page/slugit/</route>
            <defaults>
                <controller>page</controller>
                <action>slugit</action>
            </defaults>
        </page-slugit>
        
        <page-create type="Zend_Controller_Router_Route">
            <route>page/create/*</route>
            <defaults>
                <controller>page</controller>
                <action>create</action>
            </defaults>
        </page-create>
        
        <page-update type="Zend_Controller_Router_Route">
            <route>page/update/*</route>
            <defaults>
                <controller>page</controller>
                <action>update</action>
            </defaults>
        </page-update>
        
        <page-delete type="Zend_Controller_Router_Route">
            <route>page/delete/:id</route>
            <defaults>
                <controller>page</controller>
                <action>delete</action>
            </defaults>
        </page-delete>
        
        <page-ajax-move type="Zend_Controller_Router_Route">
            <route>pages/ajax/move/:pk_page/:fk_page/:weight/</route>
            <defaults>
                <controller>page</controller>
                <action>move</action>
            </defaults>
        </page-ajax-move>
        
        <page-ajax-create type="Zend_Controller_Router_Route">
            <route>pages/ajax/create/:fk_page/:weight/:title/</route>
            <defaults>
                <controller>page</controller>
                <action>create</action>
            </defaults>
        </page-ajax-create>
        
        <page-ajax-rename type="Zend_Controller_Router_Route">
            <route>pages/ajax/rename/:pk_page/:title/</route>
            <defaults>
                <controller>page</controller>
                <action>rename</action>
            </defaults>
        </page-ajax-rename>
        
        <page-ajax-delete type="Zend_Controller_Router_Route">
            <route>pages/ajax/delete/:pk_page/</route>
            <defaults>
                <controller>page</controller>
                <action>delete</action>
            </defaults>
        </page-ajax-delete>
        <!-- }}} -->
        
        
        <!-- Frontpage {{{ -->
        <frontpage-edit type="Zend_Controller_Router_Route">
            <route>frontpage/edit/:pk_page/</route>
            <defaults>
                <controller>frontpage</controller>
                <action>edit</action>
            </defaults>
        </frontpage-edit>   
        
        <frontpage-savepositions type="Zend_Controller_Router_Route">
            <route>frontpage/savepositions/</route>
            <defaults>
                <controller>frontpage</controller>
                <action>savepositions</action>
            </defaults>
        </frontpage-savepositions>
        <!-- }}} -->
        
        
        <!-- Svn routes {{{ -->
        <svn-index type="Zend_Controller_Router_Route">
            <route>svn/*</route>
            <defaults>
                <controller>svn</controller>
                <action>index</action>
            </defaults>
        </svn-index>        
        <!-- }}} -->
        
        
        <!-- Category routes {{{ -->
        <category-index type="Zend_Controller_Router_Route">
            <route>category/index/*</route>
            <defaults>
                <controller>category</controller>
                <action>index</action>
            </defaults>
        </category-index>
        
        <category-create type="Zend_Controller_Router_Route">
            <route>category/create/*</route>
            <defaults>
                <controller>category</controller>
                <action>create</action>
            </defaults>
        </category-create>
        
        <category-update type="Zend_Controller_Router_Route">
            <route>category/update/*</route>
            <defaults>
                <controller>category</controller>
                <action>update</action>
            </defaults>
        </category-update>
        
        <category-delete type="Zend_Controller_Router_Route">
            <route>category/delete/:id/</route>
            <defaults>
                <controller>category</controller>
                <action>delete</action>
            </defaults>
        </category-delete>
        <!-- }}} -->
        
        
        <!-- Keyword routes {{{ -->
        <keyword-index type="Zend_Controller_Router_Route">
            <route>keyword/index/*</route>
            <defaults>
                <controller>keyword</controller>
                <action>index</action>
            </defaults>
        </keyword-index>        
        
        <keyword-service type="Zend_Controller_Router_Route">
            <route>keyword/service/*</route>
            <defaults>
                <controller>keyword</controller>
                <action>service</action>
            </defaults>
        </keyword-service>
        <!-- }}} -->
        
    </production>
    
    
    
    
    <development extends="production">
        
        <devel-loadcontents type="Zend_Controller_Router_Route">
            <route>devel/load-contents/</route>
            <defaults>
                <controller>devel</controller>
                <action>loadcontents</action>
            </defaults>
        </devel-loadcontents>        
        
    </development>

</routes>

