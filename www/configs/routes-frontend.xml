<?xml version="1.0" encoding="UTF-8"?>
<routes>
    
    <production>
        
        <!-- Index routes {{{ -->
        <index-home type="Zend_Controller_Router_Route_Static">
            <route>/</route>
            <defaults>
                <controller>index</controller>
                <action>home</action>
            </defaults>
        </index-home>
        <!-- }}} -->
        
        
        <!-- Page routes {{{ -->
        <page-index type="Zend_Controller_Router_Route_Regex">
            <route>pages/([^\.]+).html</route>
            <defaults>
                <controller>page</controller>
                <action>index</action>                
            </defaults>
            <map>
                <slug>1</slug>
            </map>
            <reverse>pages/%s.html</reverse>
        </page-index>
        <!-- }}} -->        
        
        
        <!-- StaticPage routes {{{ -->
        <staticpage-read type="Zend_Controller_Router_Route_Regex">
            <route>staticpage/([0-9]+)/([^\.]+).html</route>
            <defaults>
                <controller>staticpage</controller>
                <action>read</action>                
            </defaults>
            <map>
                <pk_content>1</pk_content>
                <slug>2</slug>
            </map>
            <reverse>staticpage/%d/%s.html</reverse>
        </staticpage-read>
        <!-- }}} -->
        
    </production>
    
    <development extends="production"></development>

</routes>

