{
    "name": "openhost/opennemas",
    "description": "High performance and scalable NMS focused in journalism workflow",
    "keywords": ["nms", "newspapers", "magazines", "content management system"],
    "homepage": "http://opennemas.com",
    "type": "cms",
    "license": "proprietary",
    "version": "1.2",
    "authors": [
        {
            "name": "OpenHost developers",
            "email": "developers@openhost.es"
        }
    ],
    "include-path": [
        "app",
        "app/models",
        "vendor",
        "models",
        "libs/core",
        "src/",
        "src/WebService/Handlers",
        "libs"
    ],
    "autoload": {
        "psr-0": { "": "src/", "SymfonyStandard": "app/" },
        "files": [
            "libs/functions.php",
            "libs/adodb5/adodb.inc.php",
            "libs/Pager/Pager.php"
        ]
    },
    "require-dev": {
        "sensio/generator-bundle": "~2.3"
    },

    "require": {
        "php": ">=5.5.9",
        "symfony/symfony": "2.5.5",
        "doctrine/orm": ">=2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~3.0",
        "sensio/framework-extra-bundle": "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",

        "doctrine/doctrine-migrations-bundle": "dev-master",
        "doctrine/migrations": "dev-master",
        "drak/native-session": "*",
        "drexarj/disqus-php": "dev-master",
        "frandieguez/panorama-php": "1.0.*",
        "friendsofsymfony/jsrouting-bundle": "@stable",
        "imagine/imagine": "0.6.*",
        "paypal/sdk-core-php": "v1.4.2",
        "paypal/adaptivepayments-sdk-php": "dev-master",
        "paypal/merchant-sdk-php": "v2.4.103",
        "php-ffmpeg/php-ffmpeg": "0.5.*@dev",
        "hwi/oauth-bundle": "0.3.*@dev",
        "smarty/smarty" : "3.1.21",
        "smarty-gettext/smarty-gettext": "@stable"
    },
    "scripts": {
        "post-root-package-install": [
            "SymfonyStandard\\Composer::hookRootPackageInstall"
        ],
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable",
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "public",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.5-dev"
        }
    }
}
