.oat {
  clear: both;
  display: none;
}

.oat:before {
  color: #838383;
  content: '{t}Advertisement{/t}';
  display: block;
  font-size: 10px;
  left: 50%;
  margin-left: -40px;
  margin-top: -15px;
  position: absolute;
  text-align: center;
  text-transform: uppercase;
  width: 80px;
}

.oat-vertical:before {
  left: 0;
  margin-left: -10px;
  position: absolute;
  top: 50%;
  transform: rotate(-90deg);
}
