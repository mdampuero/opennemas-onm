<VirtualHost *:80>

	ServerAdmin server@administrator.local
	ServerName opennemas.local
	ServerAlias instance.local otherinstance.local
	DocumentRoot /path/to/onm-instance/public
	ErrorLog /path/to/onm-instance/tmp/logs/error.log
	CustomLog /path/to/onm-instance/tmp/logs/access.log combined
	LogLevel warn

	<Directory /path/to/onm-instance/public>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>

</VirtualHost>
